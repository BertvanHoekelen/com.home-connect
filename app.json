{
	"id": "com.home-connect",
	"sdk": 2,
	"name": {
		"en": "Bosch-Siemens Home Connect"
	},
	"description": {
		"en": "Adds support for Bosch-Siemens Home Connect"
	},
	"images": {
		"large": "/assets/images/large.png",
		"small": "/assets/images/small.png"
	},
	"category": "appliances",
	"version": "1.1.0",
	"compatibility": ">=1.5.0",
	"author": {
		"name": "Athom B.V.",
		"email": "info@athom.com"
	},
	"drivers": [
		{
			"id": "oven",
			"name": {
				"en": "Oven",
				"nl": "Oven"
			},
			"images": {
				"large": "/drivers/oven/assets/images/large.png",
				"small": "/drivers/oven/assets/images/small.png"
			},
			"class": "oven",
			"capabilities": [ "measure_temperature", "alarm_contact" ],
			"capabilitiesOptions": {
				"alarm_contact": {
					"title": {
						"en": "Door open",
						"nl": "Deur geopend"
					}
				}
			},
			"mobile": {
				"components": [
					{
						"id": "icon"
					},
					{
						"id": "sensor",
						"capabilities": [ "measure_temperature", "alarm_contact" ]
					}
				]
			},
			"pair": [
				{
					"id": "login_oauth2",
					"template": "login_oauth2"
				},
				{
					"id": "list_devices",
					"template": "list_devices",
					"navigation": {
						"next": "add_devices"
					},
					"options": {
						"singular": true
					}
				},
				{
					"id": "add_devices",
					"template": "add_devices"
				}
			]
		},
		{
			"id": "washer",
			"name": {
				"en": "Washer",
				"nl": "Wasmachine"
			},
			"images": {
				"large": "/drivers/washer/assets/images/large.png",
				"small": "/drivers/washer/assets/images/small.png"
			},
			"class": "oven",
			"capabilities": [ "alarm_contact", "bshc_string.remaining_time" ],
			"capabilitiesOptions": {
				"alarm_contact": {
					"title": {
						"en": "Door open",
						"nl": "Deur geopend"
					}
				},
				"bshc_string.remaining_time": {
					"title": {
						"en": "Remaining time",
						"nl": "Resterende tijd"
					}
				}
			},
			"mobile": {
				"components": [
					{
						"id": "icon"
					},
					{
						"id": "sensor",
						"capabilities": [ "bshc_string", "alarm_contact" ]
					}
				]
			},
			"pair": [
				{
					"id": "login_oauth2",
					"template": "login_oauth2"
				},
				{
					"id": "list_devices",
					"template": "list_devices",
					"navigation": {
						"next": "add_devices"
					},
					"options": {
						"singular": true
					}
				},
				{
					"id": "add_devices",
					"template": "add_devices"
				}
			]
		},
		{
			"id": "dryer",
			"name": {
				"en": "Dryer",
				"nl": "Droger"
			},
			"images": {
				"large": "/drivers/dryer/assets/images/large.png",
				"small": "/drivers/dryer/assets/images/small.png"
			},
			"class": "oven",
			"capabilities": [ "alarm_contact", "bshc_string.remaining_time" ],
