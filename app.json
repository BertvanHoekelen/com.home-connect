{
	"id": "com.home-connect",
	"sdk": 2,
	"name": {
		"en": "Bosch-Siemens Home Connect"
	},
	"description": {
		"en": "Adds support for Bosch-Siemens Home Connect"
	},
	"category": "appliances",
	"version": "1.0.0",
	"compatibility": ">=1.5.0",
	"author": {
		"name": "Athom B.V.",
		"email": "info@athom.com"
	},
	"drivers": [
		{
			"id": "oven",
			"name": {
				"en": "Oven"
			},
			"class": "oven",
			"capabilities": [ "onoff", "measure_temperature", "alarm_contact" ],
			"mobile": {
				"components": [
					{
						"id": "icon"
					},
					{
						"id": "sensor",
						"capabilities": [ "measure_temperature", "alarm_contact" ]
					},
					{
						"id": "toggle",
						"capabilities": [ "onoff" ]
					}
				]
			},
			"pair": [
				{
					"id": "login_oauth2",
					"template": "login_oauth2"
				},
				{
					"id": "list_devices",
					"template": "list_devices",
					"navigation": {
						"next": "add_devices"
					},
					"options": {
						"singular": true
					}
				},
				{
					"id": "add_devices",
					"template": "add_devices"
				}
			]
		}
	],
	"flow": {
		"actions": [
			{
				"id": "program_oven_preheat",
				"title": {
					"en": "Pre-heat the oven",
					"nl": "Verwarm de oven voor"
				},
				"duration": true,
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=oven"
					},
					{
						"name": "temperature",
						"type": "range",
						"min": 30,
						"max": 250,
						"step": 1,
						"labelDecimals": 0,
						"label": "Â°C"
					}
				]
			},
			{
				"id": "program_stop",
				"title": {
					"en": "Stop the active program",
					"nl": "Stop het actieve programma"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=oven"
					}
				]
			}
		]
	}
}